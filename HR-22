import java.io.*;
import java.util.*;

public class DailyTemperatures
{
    public static int[] calculateWaitDays(int[] temperatures) //result is going to be array
    {
        int len=temperatures.length;  //arrary length
        int[] answers=new int[len];  //store the answers
        int[] stack=new int[len];  //stack to store indices
        int top=-1;
        
        
        for(int i=0;i<len;i++)
        {
            while(top>=0 && temperatures[i] > temperatures[stack[top]])
            {
                int prevDay=stack[top--];  //it store index of previous day
                answers[prevDay] = i - prevDay;  // waitnign days
            }
            stack[++top]  = i; //push current index
            
        }
        return answers;
    }//end of calculatewatidays
    public static void main(String[] args) 
    {
        Scanner s=new Scanner(System.in);
        int N=s.nextInt(); //toal no of temperatures
        int[] temperatures=new int[N];  //store temperture
        for(int i=0;i<N;i++){
            temperatures[i]=s.nextInt();
        } //end of loop
        
        //output array
        int[] result=calculateWaitDays(temperatures);
        
        for(int i=0;i<result.length;i++){
            System.out.print(result[i]+" ");
          
                
            }
        
    
    }
}
